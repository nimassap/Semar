<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingSekarang"

    android:id="@+id/drawer_layout_bookingsekarang"
    android:background="@color/background1">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navdrawer_view"
        app:headerLayout="@layout/navdrawer_header"
        app:menu="@menu/navdrawer_menu"
        android:layout_gravity="start"
        app:itemIconTint="@color/button"
        app:itemTextColor="@color/button"
        android:backgroundTint="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:navigationIcon="@drawable/ic_menu"
            android:id="@+id/toolbar"
            android:elevation="4dp"
            android:background="@color/white"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/homesemar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logosemar"
                android:layout_marginEnd="56dp"/>

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PENDAFTARAN KAMAR"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="@color/black1"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Pemesan"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    app:strokeColor="@color/border"
                    app:strokeWidth="2dp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:id="@+id/nama_pemesan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colortext"
                        android:padding="5dp"
                        android:textSize="18dp"
                        android:text="Silahkan login terlebih dahulu"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@null"/>


                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Durasi"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    app:strokeColor="@color/border"
                    app:strokeWidth="2dp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tahunan"
                        android:padding="5dp"
                        android:textSize="18dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@null"/>

                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jalur"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    app:strokeColor="@color/border"
                    app:strokeWidth="2dp"
                    app:cardCornerRadius="5dp">

                    <Spinner
                        android:id="@+id/spinner_jalur"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"/>

                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Opsi Pembayaran"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    app:strokeColor="@color/border"
                    app:strokeWidth="2dp"
                    app:cardCornerRadius="5dp">

                    <Spinner
                        android:id="@+id/spinner_opsipembayaran"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"/>

                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Penghuni"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    app:strokeColor="@color/border"
                    app:strokeWidth="2dp"
                    app:cardCornerRadius="5dp">

                    <Spinner
                        android:id="@+id/spinner_jmlpenghuni"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"/>

                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    app:strokeColor="@color/border"
                    app:strokeWidth="2dp"
                    app:cardCornerRadius="5dp">

                    <Spinner
                        android:id="@+id/spinner_jk"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"/>

                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gedung"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    app:strokeColor="@color/border"
                    app:strokeWidth="2dp"
                    app:cardCornerRadius="5dp">

                    <Spinner
                        android:id="@+id/spinner_gedung"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"/>

                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kamar"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    app:strokeColor="@color/border"
                    app:strokeWidth="2dp"
                    app:cardCornerRadius="5dp">

                    <Spinner
                        android:id="@+id/spinner_kamar"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"/>

                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harga"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    app:strokeColor="@color/border"
                    app:strokeWidth="2dp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:id="@+id/harga_kamar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colortext"
                        android:padding="5dp"
                        android:textSize="18dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@null"
                        android:drawableRight="@drawable/ic_harga"/>


                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Masuk"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        app:strokeColor="@color/border"
                        app:strokeWidth="2dp"
                        app:cardCornerRadius="5dp">

                        <TextView
                            android:id="@+id/checkin_teks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colortext"
                            android:padding="5dp"
                            android:textSize="18dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@null"/>

                    </com.google.android.material.card.MaterialCardView>

                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Keluar"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        app:strokeColor="@color/border"
                        app:strokeWidth="2dp"
                        app:cardCornerRadius="5dp">

                        <TextView
                            android:id="@+id/checkout_teks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colortext"
                            android:padding="5dp"
                            android:textSize="18dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@null"/>

                    </com.google.android.material.card.MaterialCardView>

                </RelativeLayout>


                <Button
                    android:id="@+id/daftar_sekarang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DAFTAR SEKARANG"
                    android:backgroundTint="@color/button2"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="60dp"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom_background"
            android:elevation="2dp"
            app:itemIconSize="25dp"
            app:itemIconTint="@drawable/item_selector"
            app:itemRippleColor="@android:color/transparent"
            app:labelVisibilityMode="unlabeled"
            app:menu="@menu/bottomnav_menu" />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>