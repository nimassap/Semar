<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Standard"
    android:fitsSystemWindows="true"

    android:id="@+id/drawer_layout_standard"
    android:background="@color/background1">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navdrawer_view"
        app:headerLayout="@layout/navdrawer_header"
        app:menu="@menu/navdrawer_menu"
        android:layout_gravity="start"
        app:itemIconTint="@color/button"
        app:itemTextColor="@color/button"
        android:backgroundTint="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:navigationIcon="@drawable/ic_menu"
            android:id="@+id/toolbar"
            android:elevation="4dp"
            android:background="@color/white"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/homesemar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logosemar"
                android:layout_marginEnd="56dp"/>

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Standard"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="@color/black1"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:text="We all live in an age that belongs to the young at heart. Life that is becoming extremely fast,"/>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="10dp">

                    <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/image_slider_standard"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:sliderAnimationDuration="600"
                        app:sliderAutoCycleDirection="back_and_forth"
                        app:sliderAutoCycleEnabled="true"
                        app:sliderIndicatorAnimationDuration="600"
                        app:sliderIndicatorGravity="center_horizontal|bottom"
                        app:sliderIndicatorMargin="15dp"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="3dp"
                        app:sliderIndicatorRadius="2dp"
                        app:sliderIndicatorSelectedColor="@color/button"
                        app:sliderIndicatorUnselectedColor="#FFF"
                        app:sliderScrollTimeInSec="2"
                        app:sliderStartAutoCycle="true"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_standard_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gedung A, Khusus Putra (tes)"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginStart="25dp"
                    android:textSize="17dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_standard_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp500.000/bulan (tes)"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginStart="25dp"
                    android:textSize="17dp"
                    android:textColor="#03A9F4"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fasilitas"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginStart="25dp"
                    android:textColor="@color/black1"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_standard_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kamar Mandi Luar (tes)"
                    android:drawableLeft="@drawable/ic_button1"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginStart="25dp"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/button"/>

                <TextView
                    android:id="@+id/tv_standard_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Westafel (tes)"
                    android:drawableLeft="@drawable/ic_button1"
                    android:layout_marginEnd="25dp"
                    android:layout_marginStart="25dp"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/button"/>

                <TextView
                    android:id="@+id/tv_standard_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dapur Kecil (tes)"
                    android:drawableLeft="@drawable/ic_button1"
                    android:layout_marginEnd="25dp"
                    android:layout_marginStart="25dp"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/button"/>

                <TextView
                    android:id="@+id/tv_standard_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dipan (tes)"
                    android:drawableLeft="@drawable/ic_button1"
                    android:layout_marginEnd="25dp"
                    android:layout_marginStart="25dp"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/button"/>

                <TextView
                    android:id="@+id/tv_standard_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kasur (tes)"
                    android:drawableLeft="@drawable/ic_button1"
                    android:layout_marginEnd="25dp"
                    android:layout_marginStart="25dp"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/button"/>

                <TextView
                    android:id="@+id/tv_standard_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Almari (tes)"
                    android:drawableLeft="@drawable/ic_button1"
                    android:layout_marginEnd="25dp"
                    android:layout_marginStart="25dp"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/button"/>

                <TextView
                    android:id="@+id/tv_standard_9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kursi (tes)"
                    android:drawableLeft="@drawable/ic_button1"
                    android:layout_marginEnd="25dp"
                    android:layout_marginStart="25dp"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/button"/>

                <TextView
                    android:id="@+id/tv_standard_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Meja Belajar (tes)"
                    android:drawableLeft="@drawable/ic_button1"
                    android:layout_marginEnd="25dp"
                    android:layout_marginStart="25dp"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/button"/>

                <Button
                    android:id="@+id/booknow_standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daftar Sekarang"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/button2"
                    android:layout_marginBottom="50dp"/>

                <Button
                    android:id="@+id/edit_standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EDIT"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/button2"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="50dp"
                    android:visibility="gone"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom_background"
            android:elevation="2dp"
            app:itemIconSize="25dp"
            app:itemIconTint="@drawable/item_selector"
            app:itemRippleColor="@android:color/transparent"
            app:labelVisibilityMode="unlabeled"
            app:menu="@menu/bottomnav_menu" />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>